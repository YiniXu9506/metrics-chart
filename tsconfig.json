{
	"include": [
		"src/**/*",
	],
	"compilerOptions": {
		"baseUrl": "./",
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"esModuleInterop": true,
    	"moduleResolution": "node",
		"lib": ["esnext", "dom"],
		"jsx": "react",
		"target": "esnext"
	},
	"exclude": ["node_modules"]
}
